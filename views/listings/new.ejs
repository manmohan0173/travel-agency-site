<% layout("/layouts/boilerPlate") %>
    <link rel="stylesheet" href="/css/style.css">

    <body>

        <div class="row offset-2">
            <div class="col-8">
                <h2 class="mb-3">Create New Listing</h2>
                <form method="post" action="/listings" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" type="text" class="form-control" placeholder="enter the title"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please choose a Title.
                          </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" placeholder="enter description"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please choose a description.
                          </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label"></label>
                        <input name="listing[image]" type="text" class="form-control"
                            placeholder="enter the image url/link" >
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="place" class="form-label"></label>
                        <input name="listing[price]" type="text" class="form-control" placeholder="enter the amount"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter the place.
                          </div>
                    </div>
                    <div class="row">

                        <div class="mb-3 col-md-4">
                            <label for="location" class="form-label"></label>
                            <input name="listing[location]" class="form-control" type="text"
                                placeholder="enter the location" required>
                                <div class="valid-feedback">
                                    Looks good!
                                  </div>
                                  <div class="invalid-feedback">
                                    Please choose a location.
                                  </div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label"></label>
                            <input name="listing[country]" type="text" class="form-control"
                                placeholder="enter the country" required>
                                <div class="valid-feedback">
                                    Looks good!
                                  </div>
                                  <div class="invalid-feedback">
                                    Please choose your country.
                                  </div>
                        </div>
                    </div>
                    <button class="mb-3 btn btn-dark">add listing</button>
                </form>
            </div>
        </div>
    </body>